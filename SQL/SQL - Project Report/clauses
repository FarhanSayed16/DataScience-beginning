where clause:
select* 
from student
where age > 20;


whole example:-

create table student (
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(100) NOT NULL,
    age INT,
    gender VARCHAR(10),
    email VARCHAR(100),
    enrollment_date DATE
);
drop table student;
